<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <% if @article.errors.any? %>
  <div>
    <% @article.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
    <% end %>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
